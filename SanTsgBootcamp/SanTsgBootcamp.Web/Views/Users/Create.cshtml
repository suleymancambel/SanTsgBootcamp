@model SanTsgBootcamp.Domain.Users.User

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>User</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
               
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" required="required"  />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" required="required"  />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" required="required"  />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
             <div class="form-group">
               <label for="Password">Password</label>
                <input type="Password" id="Password" name="Password" required="required"  />
            </div>
            <div class="form-group">
                <label asp-for="DateOfBirth" class="control-label"></label>
                <input asp-for="DateOfBirth" class="form-control"  required="required" />
                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
            </div>
            <div class="form-group">
            
                 <label for="Password">Gender</label> <br />
                <input type="radio" name="Gender" value="true" required="required" > Male<br>
                <input type="radio" name="Gender" value="false" required="required"> Female<br>
                    

               
        	
          
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

